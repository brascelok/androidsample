<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_main"
    android:gravity="center_vertical"
    android:weightSum="10"
    tools:context="com.blackrose.learnobjectivec.activity.ExerciseActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="@string/multichoiceTitle"
        android:textSize="@dimen/ex_text_title_size720"
        android:textColor="@color/white"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_10_question"
            android:layout_width="@dimen/ex_button_width720"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/button_state"
            android:textColor="@color/button_bg"
            android:layout_marginBottom="@dimen/ex_button_margin_bot"
            android:textSize="@dimen/ex_button_textsize600"
            android:text="@string/ten"/>
        <Button
            android:id="@+id/btn_20_question"
            android:layout_width="@dimen/ex_button_width720"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/button_state"
            android:textColor="@color/button_bg"
            android:layout_marginBottom="@dimen/ex_button_margin_bot"
            android:textSize="@dimen/ex_button_textsize600"
            android:text="@string/twenty"/>
        <Button
            android:id="@+id/btn_30_question"
            android:layout_width="@dimen/ex_button_width720"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@drawable/button_state"
            android:textColor="@color/button_bg"
            android:layout_marginBottom="@dimen/ex_button_margin_bot"
            android:textSize="@dimen/ex_button_textsize600"
            android:text="@string/thirty"/>
    </LinearLayout>

</LinearLayout>
