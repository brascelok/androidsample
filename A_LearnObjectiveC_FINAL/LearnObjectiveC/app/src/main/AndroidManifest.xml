<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blackrose.learnobjectivec">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <supports-screens
        android:xlargeScreens="false">
    </supports-screens>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:fullBackupContent="true"
        android:theme="@style/AppTheme" >
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version"/>
        <activity android:name=".activity.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--ads activity-->
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <!-- parent activity -->

        <activity
            android:name=".activity.TheoryActivity"
            android:label="@string/activity_theory"
            android:parentActivityName=".activity.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blackrose.learnobjectivec.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.QuestionAnswerActivity"
            android:label="@string/activity_question"
            android:parentActivityName=".activity.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blackrose.learnobjectivec.activity.MainActivity" />
        </activity>
        <activity
            android:name=".activity.TipsActivity"
            android:label="@string/activity_tips"
            android:parentActivityName=".activity.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blackrose.learnobjectivec.activity.MainActivity" />
        </activity>
        <activity android:name=".activity.ExerciseActivity"
            android:label="@string/activity_exercises"
            android:parentActivityName=".activity.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blackrose.learnobjectivec.activity.MainActivity" />
        </activity>

        <!-- child activity -->

        <activity
            android:name=".activity.TheoryDetailActivity"
            android:label="@string/activity_theory"
            android:parentActivityName=".activity.TheoryActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blackrose.learnobjectivec.activity.TheoryActivity" />
        </activity>
        <activity
            android:name=".activity.QuestionCompareActivity"
            android:label="@string/activity_question_compare"
            android:parentActivityName=".activity.QuestionAnswerActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blackrose.learnobjectivec.activity.QuestionAnswerActivity" />
        </activity>
        <activity
            android:name=".activity.QuestionTopicActivity"
            android:label="@string/activity_question_topic"
            android:parentActivityName=".activity.QuestionAnswerActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blackrose.learnobjectivec.activity.QuestionAnswerActivity" />
        </activity>
        <activity
            android:name=".activity.ExerciseDetailActivity"
            android:label="@string/activity_exercises"
            android:parentActivityName=".activity.ExerciseActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.blackrose.learnobjectivec.activity.ExerciseActivity" />
        </activity>

    </application>

</manifest>
